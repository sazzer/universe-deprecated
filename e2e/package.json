{
  "name": "universe-e2e",
  "version": "1.0.0",
  "description": "E2E Tests for Universe",
  "main": "index.js",
  "author": "Graham Cox <graham@grahamcox.co.uk>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "clean": "rimraf output/*",
    "setup": "mkdirp output",
    "run": "cucumber-js --require-module dotenv/config --order random -f node_modules/cucumber-pretty -f json:output/cucumber_report.json --require src/**/*.js features/**/*.feature",
    "format": "node ./format.js",
    "start": "run-s -c clean setup run format"
  },
  "dependencies": {
    "cucumber": "^6.0.5",
    "dotenv": "^8.2.0",
    "selenium-webdriver": "^4.0.0-alpha.5"
  },
  "devDependencies": {
    "@types/cucumber": "^6.0.0",
    "@types/selenium-webdriver": "^4.0.6",
    "cucumber-html-reporter": "^5.1.0",
    "cucumber-pretty": "^6.0.0",
    "mkdirp": "^0.5.1",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.0"
  }
}
